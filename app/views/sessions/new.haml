%h2 Sign in
= show_flash
- semantic_form_for resource_name, resource, :url => session_path(resource_name) do |f|
  = f.error_messages
  - f.inputs do
    = f.input :email
    = f.input :password
    - if devise_mapping.rememberable?
      = f.input :remember_me, :as => :boolean
  - f.buttons do
    = f.commit_button "Sign in"


