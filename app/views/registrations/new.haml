%h2 Sign up
= show_flash

- semantic_form_for resource_name, resource, :url => registration_path(resource_name) do |f|
  = f.error_messages 
  - f.inputs do
    = f.input :email
    = f.input :password
    = f.input :password_confirmation
  - f.buttons do
    = f.commit_button "Sign up"

